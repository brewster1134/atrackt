{
  "npmClient": "yarn",
  "packages": ["src/*", "listeners/*", "plugins/*"],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["package.json", "*.md", "*.test.*"],
      "message": "version bump",
      "registry": "https://registry.npmjs.org"
    }
  }
}
